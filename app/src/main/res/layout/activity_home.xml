<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.view.HomeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- صورة الملف الشخصي على الشمال -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- أيقونة الإشعارات على اليمين -->
        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_notifications"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- النص في المنتصف -->
        <TextView
            android:id="@+id/title_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@id/profile_picture"
            app:layout_constraintEnd_toStartOf="@id/notification_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/schedule_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_margin="10dp"
        android:text="Schedule"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- الجدول (Schedule) -->
    <LinearLayout
        android:id="@+id/schedule_section"
        android:layout_below="@id/schedule_label"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/rounded_corner_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp">



    </LinearLayout>


    <TextView
        android:id="@+id/posts_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_section"
        android:text="Top Posts"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <!-- المنشورات (Posts) -->
    <LinearLayout
        android:id="@+id/posts_section"
        android:layout_below="@id/posts_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/post_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/teacher_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of Doctor/Teacher"
                    android:textStyle="bold"/>

                <!-- اسم المادة -->
                <TextView
                    android:id="@+id/subject_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject: Math"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/task_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Task or Assignment"
                    android:maxLines="1"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00AM 12/25"
            android:textSize="12dp"
            android:textColor="#FF0000"
            android:layout_gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/posts_section1"
        android:layout_below="@id/posts_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/post_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/teacher_image1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/teacher_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of Doctor/Teacher"
                    android:textStyle="bold"/>

                <!-- اسم المادة -->
                <TextView
                    android:id="@+id/subject_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject: Math"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/task_description1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Task or Assignment"
                    android:maxLines="1"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/deadline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00AM 12/25"
            android:textSize="12dp"
            android:textColor="#FF0000"
            android:layout_gravity="end"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/rounded_toolbar"
        app:menu="@menu/toolbar_menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>